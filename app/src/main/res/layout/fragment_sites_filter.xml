<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.divetime.home.FragmentHome">

    <include layout="@layout/toolbar"/>

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@drawable/row_landing_rounded_bg"
        android:layout_height="@dimen/_200sdp">

        <Button
            android:id="@+id/btn_site_type"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingStart="@dimen/_30sdp"
            android:paddingEnd="@dimen/_30sdp"
            android:textAllCaps="true"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/light_blue_rounded_bg"
            android:text="SITE TYPE"
            android:textColor="@color/app_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_site_depth"
            app:layout_constraintBottom_toTopOf="@+id/btn_city" />

        <Button
            android:id="@+id/btn_site_depth"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/light_blue_rounded_bg"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingStart="@dimen/_30sdp"
            android:paddingEnd="@dimen/_30sdp"
            android:text="DEPTH"
            android:textAllCaps="true"
            android:textColor="@color/app_white"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@+id/btn_site_type"
            app:layout_constraintLeft_toLeftOf="@+id/btn_site_type"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/btn_site_type"
            app:layout_constraintVertical_chainStyle="spread" />

        <Button
            android:id="@+id/btn_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="City"
            android:textAllCaps="true"
            android:textColor="@color/app_white"
            android:background="@drawable/light_blue_rounded_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/btn_site_type"
            app:layout_constraintRight_toRightOf="@+id/btn_site_type"
            app:layout_constraintTop_toBottomOf="@+id/btn_site_type" />


    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/red_rounded_bg"
        android:text="Apply"
        android:textAllCaps="false"
        android:textColor="@color/app_white"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
