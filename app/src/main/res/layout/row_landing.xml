<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="adapter"
            type="com.divetime.home.adapter.LandingAdapter"/>

        <variable
            name="model"
            type="com.divetime.home.model.DashboardDatum"/>

        <variable
            name="holder"
            type="com.divetime.home.adapter.LandingAdapter.MyViewHolder"/>
    </data>


<android.support.constraint.ConstraintLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:onClick="@{(v) -> adapter.onClick(v,model,holder)}"
    android:background="@drawable/row_landing_rounded_bg">


    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:text="@{model.name}"
        android:textStyle="bold"
        android:textColor="@color/app_white"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="@{model.timeFormatted}"
        android:textColor="@color/app_white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginTop="0dp"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.333" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_heading"
        app:layout_constraintTop_toTopOf="@+id/tv_heading"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/time_ico"
        app:layout_constraintRight_toLeftOf="@+id/tv_time"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/calendar_ico" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{model.dateFormatted}"
        android:textColor="@color/app_white"
        android:layout_marginLeft="-2dp"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="@{model.city}"
        android:textColor="@color/app_white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_heading"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading" />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/sepertor_white"
        android:id="@+id/view2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tv_time"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_heading"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:text="@{`$`+model.calculatedDiscount}"
        android:textColor="@{model.diveDiscount.discount == null ? @color/app_white : @color/btm_text_selected}"
        android:textSize="@dimen/_11ssp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/tv_heading"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price"
        app:layout_constraintTop_toTopOf="@+id/tv_price"
        app:srcCompat="@drawable/diver_ico"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_divers_count" />

    <TextView
        android:id="@+id/tv_reef_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:text="@{model.siteAll}"
        android:textColor="@color/app_white"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/tv_heading"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_divers_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@{model.bookedQty+`/`+model.capacity}"
        android:textColor="@color/app_white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintRight_toRightOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/sepertor_white"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_heading"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tv_time"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_divers_count"
        android:id="@+id/view3"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="42dp"
        android:layout_height="18dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/_8ssp"
        android:gravity="center"
        android:visibility="@{model.diveDiscount.discount == null ? View.GONE : View.VISIBLE}"
        android:text="@{`   `+model.diveDiscount.discount+`%`}"
        android:textColor="@{model.diveDiscount.discount == null ? @color/app_white : @color/btm_text_selected}"
        android:background="@drawable/discount_icon"
        app:layout_constraintLeft_toRightOf="@+id/tv_price"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/view3" />


</android.support.constraint.ConstraintLayout>
    </layout>